<div class="card-tier">
  <div class='card'>
    <div class='card-header'>
      <h2>Courses</h2>
    </div>
    <div class='card-content'>
      <% @courses.map do |course| %>
        <div class="course-item">
          <h3><%= link_to course.name, course_path(course)%></h3>
        </div>
      <% end %>
    </div>
</div>