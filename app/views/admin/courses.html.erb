<article class="admin-courses">
    <h1>Manage Courses</h1>
    <div>
        <% @courses.each do |course| %>
            <h3 style="color: <%= course.is_archived ? 'grey' : 'auto' %>">
                <%= course.name %> <small><%= course.is_archived ? "(archived)" : "" %></small>
                <small>
                    <%= link_to 'View', course_path(course) %>
                    <%= link_to 'Edit', edit_course_path(course) %>
                    <%= link_to 'Delete', course_path(course), method: :delete, data: {confirm: "Are you sure you want to delete this course!?"} %>
                </small>
            </h3>
        <% end %>
    </div>
</article>