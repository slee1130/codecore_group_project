<article class="admin-users">
        <h1>Manage Users</h1>

        <%= link_to 'Add User', new_user_path %>

        <h2>Unassigned</h2>

        <% @users.select{ |user| user.current_role == nil }.each do |user| %>
            <h4>
                <%= user.full_name %> (<%= user.email %>)
                <small>
                    <%= link_to 'View', user_path(user) %>
                    <%= link_to 'Edit', edit_user_path(user) %>
                    <%= link_to 'Delete', user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this user!?"} %>
                </small>
            </h4>
        <% end %>

