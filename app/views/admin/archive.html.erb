<article class="admin-archive">
    <h1>Manage Archived Courses</h1>
    <div>
        <% @archive[:courses].each do |course| %>
            <h3 style="color: <%= course.is_archived ? 'grey' : 'auto' %>">
                <%= course.name %> <small><%= course.is_archived ? "(archived)" : "" %></small>
                <small>
                    <%= link_to 'Edit', edit_course_path(course) %>
                    <%= link_to 'View', course_path(course) %>
                    <%= link_to 'Delete', course_path(course), method: :delete, data: {confirm: "Are you sure you want to delete this course!?"} %>
                </small>
            </h3>
        <% end %>
    </div>

    <h1>Archived Users</h1>

    <% @archive[:course_roles].each do |cr| %>
        <h3 style="color: grey"><%= cr.user.full_name %> (archived <%= cr.role %>)</h3>
    <% end %>

</article>