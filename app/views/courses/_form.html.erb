<% if @course.errors.any? %>
  <ul>
    <% @course.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
  </ul>
<% end %>


<%= form_for @course do |f| %>

<div>
<%= f.label :name %>
<%= f.text_field :name%>
<div>

<div>
<%= f.label :description %>
<%= f.text_field :description %>
<div>

<div>
<%= f.label :status %>
<%= f.select :status, ['active', 'inactive'] %>
<div>

<div>
<%= f.label :course_type %>
<%= f.select :course_type, ['Computer', 'Business', 'Design'] %>
<div>

<div>
<%= f.label :start_date %>
<%= f.datetime_select :start_date, prompt: true%>
<div>

<div>
<%= f.label :end_date %>
<%= f.datetime_select :end_date, prompt: true%>
<div>


<%= f.submit %>

<% end %>
